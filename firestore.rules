rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow each user to read/write only their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Deny all other write access (default)
    match /{document=**} {
      allow read: if true;  // Optional: Allow public read
      allow write: if false;
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    match /certificates/{userId}/{fileName} {
      allow read, write: if request.auth != null;
      // Or for testing:
      // allow read, write: if true;
    }
  }

  service cloud.firestore {
  match /databases/{database}/documents {
    
    match /forumPosts/{postId} {
       allow read: if true; // or add your own condition
    allow write: if request.auth != null && request.auth.uid == resource.data.authorId;
     
    }
  }
}
}
